@model Cart
@{
    ViewData["Title"] = "GetUserCart";
}

<div class="text-capitalize text-center pb-2">
    <h1>Billleterie Paris 2024</h1>
</div>


<div style="width:90%;margin:auto" class="mt-2">
    @if (Model != null && Model.CartItems != null && Model.CartItems.Count > 0)
    {
        <h5>Votre panier</h5>

        <table class="table table-striped">
            <tr>
                <th>Sport</th>
                <th>Offer</th>
                <th>Type offre</th>
                <th>Prix (P.U)</th>
                <th>Prix Billet</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>
                        @if (string.IsNullOrEmpty(item.Offer.Offer_ImagePath))
                        {
                            <img src="/images/NoImage.png" style="width:80px;height:100px" />
                        }
                        else
                        {
                            <img src="/images/@item.Offer.Offer_ImagePath" style="width:80px;height:100px" />
                        }
                    </td>
                    <td>@item.Offer.Offer_Code</td>
                    <td>@item.Offer.OfferType.OfferType_Name</td>
                    <td>@item.Offer.Offer_UnitPrice X @item.CartItem_Quantity</td>
                    <td>@(item.Offer.Offer_UnitPrice * item.CartItem_Quantity)</td>
                    <td>
                        <a class="btn btn-info" href="/cart/removeitem?offerid=@item.OfferId">-</a>
                        <a class="btn btn-info" href="/Cart/AddItem?offerId=@item.OfferId&&redirect=1">+</a>

                    </td>
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Sous-total (@Model.CartItems.Count articles) : @(Model.CartItems.Select(item => item.Offer.Offer_UnitPrice * item.CartItem_Quantity).Sum()) €</h5>
            <h5></h5>

        </div>

        <div class="my-4">
            @*             <a class="btn btn-primary" href="/Cart/Checkout">Checkout</a> *@
            <a class="btn btn-primary" href="/Payment/Checkout">Passer le commande</a>
        </div>

    }
    else
    {

        <div class="my-4">
            <h5>Votre panier est vide</h5>
        </div>

    }
</div>

