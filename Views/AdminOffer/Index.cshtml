@model IEnumerable<Paris2024.Models.Offer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Offer_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer_Sport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer_ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer_UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfferType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Offer_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer_Sport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer_ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offer_UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfferType.OfferType_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OfferId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OfferId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OfferId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
